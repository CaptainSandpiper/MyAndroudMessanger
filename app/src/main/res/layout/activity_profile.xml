<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBg"
        tools:context=".activities.ProfileActivity">

    <ImageView
            android:layout_width="387dp"
            android:layout_height="197dp" app:srcCompat="@drawable/happy_woman"
            android:id="@+id/profilePicture" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="My Status"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:textColor="#f0f7f4"
            android:textAlignment="center"
            android:textSize="24sp"

            android:id="@+id/profileStatus" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/profileName" app:layout_constraintHorizontal_bias="0.506"/>
    <TextView
            android:text="My Name"
            android:layout_width="314dp"
            android:layout_height="31dp"
            android:textColor="#f0f7f4"
            android:textSize="24sp"
            android:textAlignment="center"
            android:id="@+id/profileName" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/profilePicture"/>
    <Button
            android:text="Send Message"
            android:layout_width="311dp"
            android:layout_height="52dp"
            android:background="@drawable/bt_shape"
            android:textColor="#f0f7f4"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:id="@+id/profileSendMessage" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/profileStatus" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:text="s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/startRecordingButton"
    />
    <Button
            android:text="p"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/pauseRecordingButton"
            app:layout_constraintStart_toEndOf="@+id/startRecordingButton"
             />
    <Button
            android:text="c"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sendVoiceButton"
            app:layout_constraintStart_toEndOf="@+id/pauseRecordingButton"
    />
    <Button
            android:text="X"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/cancelButton"
            app:layout_constraintStart_toEndOf="@+id/sendVoiceButton"
    />
    <TextView
            android:text="Recording status"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="20dp"
            tools:layout_editor_absoluteX="0dp"
            android:id="@+id/recordingStatus"
            app:layout_constraintTop_toBottomOf="@+id/pauseRecordingButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
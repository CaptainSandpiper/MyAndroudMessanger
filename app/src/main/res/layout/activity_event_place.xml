<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical">

    <Button
            android:text="Button"
            android:layout_width="394dp"
            android:layout_height="39dp" android:id="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginBottom="47dp"
            android:layout_alignBottom="@+id/map"/>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/map"
              tools:context=".activities.EventPlaceActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              map:layout_constraintStart_toStartOf="parent"
              map:layout_constraintEnd_toEndOf="parent"
              map:layout_constraintTop_toTopOf="parent"/>

</RelativeLayout>